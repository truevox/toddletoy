{
  "name": "toddler-toy-pwa",
  "version": "1.0.22",
  "description": "Montessori-aligned interactive toddler toy PWA",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:visual": "playwright test tests/browser/layout-preservation-visual.spec.js",
    "test:performance": "playwright test tests/browser/performance-validation.spec.js",
    "test:cross-browser": "playwright test tests/browser/cross-browser-compatibility.spec.js",
    "test:all": "npm run test && npm run test:e2e",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "typecheck": "echo 'No TypeScript yet'"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@playwright/test": "^1.53.1",
    "babel-jest": "^30.0.4",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "pwa",
    "toddler",
    "montessori",
    "educational",
    "interactive"
  ],
  "author": "Marvin Bentley II",
  "license": "MIT"
}
